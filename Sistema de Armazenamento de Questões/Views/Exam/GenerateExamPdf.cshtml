@model ExamModel

@{
    ViewData["Title"] = "Gerar PDF da Prova";
}

<div class="container mt-5">
    <h2 class="text-center text-primary">Gerar PDF da Prova</h2>
    <hr>

    <h4>@Model.Title</h4>

    <p class="text-muted">Você está prestes a gerar o PDF para a prova <strong>@Model.Title</strong>.</p>

    <div class="list-group mb-3">
        @foreach (var examQuestion in Model.ExamQuestions)
        {
            <div class="list-group-item list-group-item-action">
                <h5 class="fw-bold">@examQuestion.Question.Question</h5>
                <p class="mb-1 text-muted">Nível: <span class="fw-semibold">@examQuestion.Question.Level</span></p>
            </div>
        }
    </div>

    <div class="text-center">
        <a href="@Url.Action("GenerateExamPdf", "Exam", new { id = Model.Id })" class="btn btn-success">Gerar PDF</a>
        <a asp-controller="Exam" asp-action="Index" class="btn btn-secondary">Voltar</a>
    </div>
</div>
