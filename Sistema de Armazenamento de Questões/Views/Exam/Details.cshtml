@model Sistema_de_Armazenamento_de_Questões.Models.ExamModel

@{
    ViewData["Title"] = "Detalhes da Prova";
}

<h1>@Model.Title</h1>
<p><strong>Descrição:</strong> @Model.Description</p>
<p><strong>Data de Criação:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy")</p>

<h2>Questões</h2>
<ul>
    @foreach (var question in Model.Questions)
    {
        <li>@question.Question</li>
    }
</ul>

<a asp-controller="Exam" asp-action="Details" class="btn btn-secondary">Voltar</a>
