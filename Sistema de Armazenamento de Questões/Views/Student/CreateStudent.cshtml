@model Sistema_de_Armazenamento_de_Questões.Models.StudentModel
<form asp-action="CreateStudent" method="post">
    <div class="form-group">
        <label for="SchoolId">Escola</label>
        <select id="SchoolId" name="SchoolId" class="form-control" required>
            <option value="">Selecione uma escola</option>
            @if (ViewBag.Schools != null)
            {
                var schools = ViewBag.Schools as List<Sistema_de_Armazenamento_de_Questões.Models.SchoolModel>;
                if (schools != null && schools.Count > 0)
                {
                    @foreach (var school in schools)
                    {
                        <option value="@school.Id">@school.Name</option>
                    }
                }
                else
                {
                    <option value="">Nenhuma escola disponível</option>
                    <script>
                        setTimeout(function() {
                            window.location.href = '@Url.Action("Index", "Student")';
                        }, 3000);
                    </script>
                }
            }
        </select>
    </div>
    <div class="form-group">
        <label for="Name">Nome do Aluno</label>
        <input type="text" id="Name" name="Name" class="form-control" value="@(Model?.Name)" required />
    </div>
    <div class="form-group">
        <label for="BirthDate">Data de Nascimento</label>
        <input type="date" id="BirthDate" name="BirthDate" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="schoolYear">Ano Escolar</label>
        <input type="text" id="schoolYear" name="schoolYear" class="form-control" value="@(Model?.schoolYear)" required />
    </div>
    <button type="submit" class="btn btn-success">Cadastrar Aluno</button>
</form>