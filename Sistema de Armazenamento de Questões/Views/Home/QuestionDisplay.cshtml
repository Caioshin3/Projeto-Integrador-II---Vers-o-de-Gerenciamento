@model List<QuestionModel>

@{
    ViewData["Title"] = "Exibição de Questões";
}

<div class="container mt-5">
    <h2 class="text-center text-primary">Questões da Categoria</h2>
    <hr>

    @if (Model != null && Model.Any())
    {
        <div class="list-group">
            @foreach (var question in Model)
            {
                <div class="list-group-item list-group-item-action mb-3 shadow-sm border-primary">
                    <h5 class="fw-bold">@question.Question</h5>
                    <p class="mb-1 text-muted">Nível: <span class="fw-semibold">@question.Level</span></p>
                    <a asp-controller="Questions" asp-action="Edit" asp-route-id="@question.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-controller="Questions" asp-action="Delete" asp-route-id="@question.Id" class="btn btn-danger btn-sm" onclick="return confirm('Tem certeza que deseja excluir esta questão?');">Excluir</a>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            Nenhuma questão cadastrada nesta categoria ainda.
        </div>
    }

    <div class="text-center mt-4">
        <a asp-controller="Questions" asp-action="Create" class="btn btn-primary">Cadastrar Nova Questão</a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Voltar</a>
    </div>
</div>
