@model LoginModel
@{
    Layout = "_LayoutDeslogada";
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gerenciador de Questões</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #003366;
            --accent-color: #ffcc00;
            --background-color: #f0f4f8;
            --form-background-color: #ffffff;
        }

        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            height: 100vh;
            background-color: var(--background-color);
            position: relative;
        }

        .background-image {
            background-image: url('https://img.freepik.com/fotos-premium/fundo-de-perguntas-e-respostas-de-vetor-com-simbolo-de-pesquisa_975403-1123.jpg');
            background-size: cover;
            background-position: center;
            filter: blur(10px);
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: -1;
        }

        .login-container {
            max-width: 1200px;
            min-height: 60vh;
            margin: 10vh auto;
            background-color: var(--form-background-color);
            border-radius: 20px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            z-index: 1;
        }

        .form-section {
            padding: 50px;
            width: 60%;
            background-color: #ffffff;
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.05);
            border-radius: 15px;
        }

            .form-section h3 {
                color: var(--primary-color);
                font-size: 2.5rem;
                margin-bottom: 30px;
            }

            .form-section .form-label {
                font-weight: bold;
                color: var(--primary-color);
            }

            .form-section .form-control {
                border-radius: 10px;
                border: 1px solid #ddd;
                padding: 15px;
                font-size: 1rem;
                margin-bottom: 20px;
                transition: all 0.3s ease;
            }

                .form-section .form-control:focus {
                    border-color: var(--primary-color);
                    box-shadow: 0 0 5px rgba(0, 51, 102, 0.3);
                }

            .form-section button {
                background-color: var(--primary-color);
                color: #ffffff;
                font-weight: bold;
                border: none;
                border-radius: 10px;
                padding: 15px;
                font-size: 1.1rem;
                width: 100%;
                transition: background-color 0.3s ease;
            }

                .form-section button:hover {
                    background-color: var(--accent-color);
                }

        .alert {
            margin-bottom: 20px;
            padding: 15px;
            text-align: center;
            background-color: #f8d7da;
            color: #721c24;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

            .alert i {
                margin-right: 10px;
            }

            .alert .close-alert {
                background: none;
                border: none;
                font-size: 1.5rem;
                color: #721c24;
                cursor: pointer;
            }

        .logo-section {
            width: 30%;
            padding: 20px;
            text-align: center;
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            border-radius: 20px;
            background: none;
        }

            .logo-section img {
                max-width: 180px;
                margin-bottom: 20px;
            }

            .logo-section h2 {
                font-size: 2rem;
                font-weight: 600;
                margin-bottom: 10px;
                color: var(--accent-color);
            }
    </style>
</head>
<body>
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="fas fa-exclamation-circle"></i>
            @TempData["MensagemErro"]
            <button type="button" class="close-alert" aria-label="Close">&times;</button>
        </div>
    }

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <i class="fas fa-check-circle"></i>
            @TempData["MensagemSucesso"]
            <button type="button" class="close-alert" aria-label="Close">&times;</button>
        </div>
    }

    <div class="background-image"></div>

    <div class="login-container d-flex">

        <div class="form-section">
            <h3 class="text-center mb-4">GERENCIADOR DE QUESTÕES</h3>

            <form asp-controller="Login" asp-action="Entrar" method="post">
                <div class="mb-4">
                    <label for="usuario" class="form-label">Usuário</label>
                    <input type="text" asp-for="Login" class="form-control" id="login" placeholder="Digite seu usuário">
                    @Html.ValidationMessageFor(x => x.Login)
                </div>
                <div class="mb-4">
                    <label for="senha" class="form-label">Senha</label>
                    <input type="password" asp-for="Senha" class="form-control" id="senha" placeholder="Digite sua senha">
                    @Html.ValidationMessageFor(x => x.Senha)
                </div>
                <button type="submit" class="btn btn-dark w-100 py-2">ENTRAR</button>
                <div class="mt-4"></div>

                <p class="mb-4 text-sm-center mx-auto">
                    Esqueceu sua senha?
                    <a asp-action="ResetPassword" asp-controller="Login" class="text-primary text-gradient font-weight-bold">   Redefinir minha senha</a>
                </p>
            </form>
        </div>



        <div class="logo-section">
            <img src="https://upload.wikimedia.org/wikipedia/commons/1/1d/Brasao_ufc.svg" alt="Brasão">
            <h2>UFC</h2>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
