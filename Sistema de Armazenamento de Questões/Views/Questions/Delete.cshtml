@model QuestionModel
@{
    ViewData["Title"] = "Excluir questão";
}

<div class="text-center">
    <h3>Realmente deseja apagar a questão (@Model.Question)?</h3>
</div>

<div class="d-flex justify-content-center mt-4">
    <a class="btn btn-primary me-2" role="button" asp-controller="Questions" asp-action="Index">Cancelar exclusão</a>
    <a class="btn btn-danger me-2" role="button" asp-controller="Questions" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar exclusão</a>
</div>
