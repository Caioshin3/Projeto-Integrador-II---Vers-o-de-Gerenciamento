@using Sistema_de_Armazenamento_de_Questões.Enums
@model UserModel

<div class="text-center py-5 bg-primary text-white rounded shadow">
    <h1 class="display-3 font-weight-bold">Editar Usuário</h1>
    <p class="lead">Preencha os dados abaixo para cadastrar um novo usuário</p>
</div>

<form asp-controller="User" asp-action="Alterar" method="post" class="container mt-5">

    <input type="hidden" asp-for="Id" />
    <div class="form-group mb-4">
        <label for="nome" class="form-label font-weight-bold">Nome</label>
        <input type="text" asp-for="Name" class="form-control form-control-lg" placeholder="Digite o nome do usuário">
        @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-4">
        <label for="email" class="form-label font-weight-bold">E-mail</label>
        <input type="email" asp-for="Email" class="form-control form-control-lg" placeholder="Digite o e-mail do usuário">
        @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-4">
        <label for="login" class="form-label font-weight-bold">Login</label>
        <input type="text" asp-for="Login" class="form-control form-control-lg" placeholder="Digite o login do usuário">
        @Html.ValidationMessageFor(x => x.Login, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-4">
        <label for="perfil" class="form-label font-weight-bold">Perfil</label>
        <select asp-for="Perfil" class="form-control form-control-lg" onchange="updateLevelColor(this)">
            <option value="">Selecione</option>
            <option value="@PerfilEnum.Admin" class="bg-danger text-white">Administrador</option>
            <option value="@PerfilEnum.Padrao" class="bg-success text-white">Padrão</option>
        </select>
        @Html.ValidationMessageFor(x => x.Perfil, "", new { @class = "text-danger" })
    </div>

    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary btn-lg w-48">Editar</button>
        <a class="btn btn-secondary btn-lg w-48" asp-action="Index" asp-controller="User" role="button">Voltar</a>
    </div>

</form>

<script>
    function updateLevelColor(select) {
        const selectedOption = select.options[select.selectedIndex];
        select.className = 'form-select form-control-lg border-primary shadow-sm ' + selectedOption.className;
    }
</script>
