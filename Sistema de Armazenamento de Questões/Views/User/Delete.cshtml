@model UserModel
@{
    ViewData["Title"] = "Excluir usuário";
}

<div class="text-center">
    <h3>Realmente deseja apagar o usuário (@Model.Name)?</h3>
</div>

<div class="d-flex justify-content-center mt-4">
    <a class="btn btn-primary me-2" role="button" asp-controller="User" asp-action="Index">Cancelar exclusão</a>
    <a class="btn btn-danger me-2" role="button" asp-controller="User" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar exclusão</a>
</div>
